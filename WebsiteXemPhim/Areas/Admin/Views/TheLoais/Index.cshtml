@model IEnumerable<WebsiteXemPhim.Models.TheLoai>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách các thể loại</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm thể loại mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tên thể loại</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTheLoai)
                </td>
                <td class="col-md-3" style=" text-align:right;">
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.TheLoaiId">Sửa</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TheLoaiId">Chi tiết</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TheLoaiId">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
